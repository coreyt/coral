{
  "name": "@coral/language",
  "version": "0.1.0",
  "description": "Coral DSL parser and printer",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./parser": {
      "types": "./dist/parser/index.d.ts",
      "import": "./dist/parser/index.js"
    },
    "./printer": {
      "types": "./dist/printer/index.d.ts",
      "import": "./dist/printer/index.js"
    },
    "./formats": {
      "types": "./dist/formats/index.d.ts",
      "import": "./dist/formats/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src test",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {},
  "optionalDependencies": {
    "tree-sitter": "^0.21.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {}
}
